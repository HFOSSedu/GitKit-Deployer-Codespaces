{
    "image" : "registry.gitlab.com/hfossedu/kits/kitscript:2",
    "features": {
        "ghcr.io/devcontainers/features/docker-in-docker": {
			"version": "latest",
			"enableNonRootDocker": "true",
			"moby": "true"
		}
    },
    "customizations": {
        "vscode": {
            "settings": {
		"workbench": {
			"startupEditor": "terminal"
		},
                "tasks": {
                    "version": "2.0.0",
                    "tasks": [
                        {
                            "label": "deploy",
                            "type": "shell",
                            "command": ".devcontainer/deploy.bash",
                            "runOptions": {
                                "runOn": "folderOpen"
                            }
                        }
                    ]
                }
            }
        }
    }
}
